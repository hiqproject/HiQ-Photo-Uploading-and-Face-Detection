<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vinnie.facedetectiongooglevisionapi.MainActivity">

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/qutBlue"
        app:itemIconTint="@drawable/color_state"
        app:itemTextColor="@drawable/color_state"
        app:menu="@menu/bottom_navigation_item"
        />

    <LinearLayout
        android:id="@+id/bSubmitImage"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="18sp"
            android:paddingLeft="40dp"
            android:paddingTop="13dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_style"
            android:text="Submit"
            android:layout_width="140dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bCamera"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="18sp"
            android:paddingLeft="13dp"
            android:paddingTop="13dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_style"
            android:text="Capture Photo"
            android:layout_width="140dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bUploadImage"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="18sp"
            android:paddingLeft="13dp"
            android:paddingTop="13dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_style"
            android:text="Choose Photo"
            android:layout_width="140dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bProcessImage"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="18sp"
            android:paddingLeft="35dp"
            android:paddingTop="13dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_style"
            android:text="Process"
            android:layout_width="140dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="235dp"
        android:id="@+id/imageToUpload"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintVertical_bias="0.288"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/image_view_placeholder"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/qutBlue">

        <TextView
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:textColor="@color/colorWhite"
            android:text="ID Photo"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp" />

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="56dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:src="@drawable/hiq_logo" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:src="@drawable/qut_logo" />

</RelativeLayout>