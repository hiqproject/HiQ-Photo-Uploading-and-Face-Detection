<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:itemBackground="@color/qutBlue"
tools:context="com.example.vinnie.facedetectiongooglevisionapi.HomeActivity">

<android.support.design.widget.BottomNavigationView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottom_navigation"
    android:layout_alignParentBottom="true"
    app:itemBackground="@color/qutBlue"
    app:itemIconTint="@drawable/color_state"
    app:itemTextColor="@drawable/color_state"
    app:menu="@menu/bottom_navigation_item"
    />

<LinearLayout
    android:id="@+id/bInstructions"
    android:layout_marginTop="175dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:padding="5dp"
        android:background="@drawable/btn_left_corner"
        android:src="@drawable/ic_instructions"
        android:layout_width="50dp"
        android:layout_height="60dp" />

    <TextView
        android:textSize="25sp"
        android:paddingLeft="10dp"
        android:paddingTop="13dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_right_corner"
        android:text="Instructions"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

</LinearLayout>

<LinearLayout
    android:id="@+id/bIdCard"
    android:layout_marginTop="275dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:padding="5dp"
        android:background="@drawable/btn_left_corner"
        android:src="@drawable/ic_idcard"
        android:layout_width="50dp"
        android:layout_height="60dp" />

    <TextView
        android:textSize="25sp"
        android:paddingLeft="10dp"
        android:paddingTop="13dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_right_corner"
        android:text="ID Photo"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

</LinearLayout>

<LinearLayout
    android:id="@+id/bSettings"
    android:layout_marginTop="375dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:padding="5dp"
        android:background="@drawable/btn_left_corner"
        android:src="@drawable/ic_settings"
        android:layout_width="50dp"
        android:layout_height="60dp" />

    <TextView
        android:textSize="25sp"
        android:paddingLeft="10dp"
        android:paddingTop="13dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_right_corner"
        android:text="Settings"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

</LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/qutBlue">

        <TextView
            android:textSize="25sp"
            android:paddingTop="13dp"
            android:textColor="@color/colorWhite"
            android:text="Home"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp" />

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="56dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:src="@drawable/hiq_logo" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:src="@drawable/qut_logo" />

</RelativeLayout>
